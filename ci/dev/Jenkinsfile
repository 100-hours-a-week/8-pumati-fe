            steps {
                container('nodejs') {
                    echo 'ë‹¨ìœ„ í…ŒìŠ¤íŠ¸ ì‹¤í–‰ ì¤‘...'
                    script {
                        try {
                            sh '''
                                # í™˜ê²½ ë³€ìˆ˜ ì„¤ì •
                                export NPM_CONFIG_CACHE=/home/jenkins/agent/.npm
                                export CI=true

                                if [ -f "cicd/dev/.env" ]; then
                                    echo "í™˜ê²½ íŒŒì¼ ë°œê²¬, ë¡œë“œ ì¤‘..."
                                    set -a && . ./cicd/dev/.env && set +a
                                else
                                    echo "í™˜ê²½ íŒŒì¼ì´ ì—†ìŠµë‹ˆë‹¤."
                                fi

                                echo "í…ŒìŠ¤íŠ¸ ì‹¤í–‰ ì‹œì‘..."
                                # í…ŒìŠ¤íŠ¸ê°€ ìˆë‹¤ë©´ ì‹¤í–‰ (ì—†ìœ¼ë©´ ê±´ë„ˆë›°ê¸°)
                                if npm run test --if-present; then
                                    echo "âœ… í…ŒìŠ¤íŠ¸ ì™„ë£Œ"
                                else
                                    echo "â„¹ï¸ í…ŒìŠ¤íŠ¸ ìŠ¤í¬ë¦½íŠ¸ê°€ ì—†ê±°ë‚˜ ì‹¤í–‰ë˜ì§€ ì•Šì•˜ìŠµë‹ˆë‹¤."
                                fi
                            '''
                        } catch (Exception e) {
                            echo "í…ŒìŠ¤íŠ¸ ì‹¤í–‰ ì¤‘ ì˜¤ë¥˜: ${e.getMessage()}"
                            currentBuild.result = 'UNSTABLE'
