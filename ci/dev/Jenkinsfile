        // 5. í…ŒìŠ¤íŠ¸ ì‹¤í–‰ (ì„ íƒì )
        stage('Test') {
            when {
                // dev ë¸Œëœì¹˜ë‚˜ PRì—ì„œë§Œ í…ŒìŠ¤íŠ¸ ì‹¤í–‰
                anyOf {
                    branch 'dev'
                    changeRequest()
