                                else
                                    echo "âš ï¸ í™˜ê²½ íŒŒì¼ì´ ì—†ìŠµë‹ˆë‹¤."
                                fi

                                echo "í”„ë¡ íŠ¸ì—”ë“œ ë¹Œë“œ ì‹œì‘..."
                                npm run build

                                echo "ë¹Œë“œ ê²°ê³¼ í™•ì¸..."
                                ls -la

                                # ë¹Œë“œ ê²°ê³¼ë¬¼ í™•ì¸ (ì¼ë°˜ì ìœ¼ë¡œ build/ ë˜ëŠ” dist/ ë””ë ‰í† ë¦¬)
                                if [ -d "build" ]; then
                                    echo "âœ… build ë””ë ‰í† ë¦¬ í™•ì¸:"
                                    ls -la build/
                                elif [ -d "dist" ]; then
                                    echo "âœ… dist ë””ë ‰í† ë¦¬ í™•ì¸:"
                                    ls -la dist/
                                elif [ -d ".next" ]; then
                                    echo "âœ… .next ë””ë ‰í† ë¦¬ í™•ì¸ (Next.js):"
                                    ls -la .next/
                                else
                                    echo "âš ï¸ ë¹Œë“œ ê²°ê³¼ë¬¼ ë””ë ‰í† ë¦¬ë¥¼ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤."
                                fi
                            '''
                            echo 'âœ… ì• í”Œë¦¬ì¼€ì´ì…˜ ë¹Œë“œ ì™„ë£Œ'
                        } catch (Exception e) {
                            echo "ì• í”Œë¦¬ì¼€ì´ì…˜ ë¹Œë“œ ì‹¤íŒ¨: ${e.getMessage()}"
                            error('ë¹Œë“œ ì‹¤íŒ¨')
                        }
                    }
