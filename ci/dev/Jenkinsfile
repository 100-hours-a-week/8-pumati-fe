    // í™˜ê²½ ë³€ìˆ˜ ì„¤ì •
    environment {
        // AWS ê³µê°œ ì •ë³´ (ê¹ƒì— ì˜¬ë ¤ë„ ì•ˆì „)
        AWS_REGION = 'ap-northeast-2'                    // ì„œìš¸ ë¦¬ì „
        ECR_REPOSITORY = 'pumati-dev-frontend-ecr'       // ECR ë¦¬í¬ì§€í† ë¦¬ ì´ë¦„

        // ì´ë¯¸ì§€ íƒœê·¸ ì„¤ì • (ë¸Œëœì¹˜ëª…ê³¼ ë¹Œë“œ ë²ˆí˜¸ ì¡°í•©)
        IMAGE_TAG = "${BRANCH_NAME}-${BUILD_NUMBER}"

        // Node.js í™˜ê²½ ì„¤ì •
